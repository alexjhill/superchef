
{{> header }}
<div class="container">

    <h1>{{ title }}</h1>

    {{#if errors}}
    {{#each errors}}
    <div class="alert alert-danger">
        {{this.msg}}
    </div>
    {{/each}}
    {{/if}}

    <form action="/recipe/{{ recipe._id }}/edit" method="post">

        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" name="title" placeholder="Recipe title" value="{{ recipe.title }}">
        </div>


        <div class="form-group">
            <label for="body">Recipe body</label>
            <input type="text" class="form-control" name="body" placeholder="Your text here" value="{{ recipe.body }}">
        </div>
        <button type="submit" class="btn btn-primary">Publish</button>


    </form>
</div>
