<body>

    <header class="blog-header py-3">
        <div class="row flex-nowrap justify-content-between align-items-center">
            <div class="col-4 pt-1">
                <a href="/"><img src="img/logo.svg" alt="Cipher logo"></a>
            </div>
            <div class="col-4 d-flex justify-content-end align-items-center">
                {{#if isAuthenticated}}
                <a class="btn btn-sm btn-outline-primary" href="/create-article">Create article</a>
                <a class="btn btn-sm btn-outline-secondary" href="/logout">Logout</a>
                {{else}}
                <a class="btn btn-sm btn-outline-primary" href="/register">Register</a>
                <a class="btn btn-sm btn-outline-secondary" href="/login">Login</a>
                {{/if}}
            </div>
        </div>
    </header>
</body>
</html>
